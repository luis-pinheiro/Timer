{
  "name": "timer-app",
  "version": "1.0.0",
  "description": "A simple countdown timer application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --mac --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "timer",
    "countdown",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-icon-builder": "^2.0.1",
    "png2icons": "^2.0.1",
    "puppeteer": "^24.35.0",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.timer.app",
    "productName": "Timer",
    "files": [
      "main.js",
      "preload.js",
      "timer_app.html",
      "icon.svg",
      "build/"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
